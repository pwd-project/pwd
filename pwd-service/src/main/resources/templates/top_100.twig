{% extends "layout/base.twig" %}

{% block title %}TOP 100{% endblock %}

{% block content %}
    <section class="container-fluid">

        <div class="row mt text-center">
            <div class="col-md-12">
                <h2>Ranking TOP 100</h2>

                <h3>100 najbardziej dostępnych serwisów</h3>
            </div>
        </div>

        <div class="row mt">
            <div class="col-sm-8 col-sm-offset-2">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Punktacja</th>
                        <th>Nazwa</th>
                        <th>Serwis</th>
                        <th>Raporty</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in ranking %}
                        <tr>
                            <th scope="row">{{ loop.index }}</th>
                            <td>{{ item.totalScore }}</td>
                            <td>{{ item.name }}</td>
                            <td><a href="{{ item.url }}" target="_blank">{{ item.url }}</a></td>
                            <td><a href="/serwisy/{{ item.websiteId }}">Zobacz</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}