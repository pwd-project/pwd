{% extends "layout/base.twig" %}

{% block title %}Szczeg√≥ly analizy{% endblock %}

{% block content %}
    <section class="container" style="background-color: #fff">
        <h1 class="text-center">Wyniki analizy</h1>

        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-icon">
                        <span>
                            {{ websiteAudit.auditReport.score }}
                        </span>
                    </div>
                    <div class="info">
                        <h4 class="text-center">
                            {{ websiteAudit.website.url }}
                        </h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            {% for item in metrics %}
                <div class="col-xs-12 col-sm-6">
                    <div class="box">
                        <div class="box-icon">
                            <span>
                                {{ websiteAudit.auditReport.getMetric(item.name).valueAsString }}
                            </span>
                        </div>
                        <div class="info">
                            <h4 class="text-center">
                                <a href="/metryki/{{ item.name }}">{{ item.namePl }}</a>
                            </h4>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}