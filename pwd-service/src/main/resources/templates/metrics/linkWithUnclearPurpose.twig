{% extends "../layout/base.twig" %}

{% block content %}
    <section class="container">
        <div class="row mt">
            <div class="col-md-12">
                <h1>{{ metric.namePl }}</h1>

                <h3>Google Accessibility</h3>
                <ul>
                    <li>Reguła <a href="https://github.com/GoogleChrome/accessibility-developer-tools/wiki/Audit-Rules#ax_text_04" target="_blank">AX_TEXT_04</a></li>
                </ul>

                <h3>Opis</h3>
                <p>
                Metryka weryfikuje, czy cel wszystkich odnośników wynika z ich treści .
                </p>

                <h3>Wartości metryki</h3>

                <ul>
                    <li>0 jeśli nie wynika</li>
                    <li>100 jeśli wynika</li>
                </ul>

                {% include 'metric_meta.twig' %}

            </div>
        </div>
    </section>
{% endblock %}