{% extends "../layout/base.twig" %}

{% block content %}
    <section class="container">
        <div class="row mt">
            <div class="col-md-12">
                <h1>Metryka {{ metric.namePl }}</h1>

                <p>
                    Metryka weryfikuje czy na stronie głównej znajduje się odnośnik do informacji kontaktowych.
                </p>

                <h3>Wartości metryki</h3>

                <ul>
                    <li>0 jeśli strona nie posiada odnośnika mająceko w tekście słowokontakt</li>
                    <li>100 jeśli strona posiada</li>
                </ul>

                {% include 'metric_meta.twig' %}

            </div>
        </div>
    </section>
{% endblock %}