{% extends "../layout/base.twig" %}

{% block content %}
    <section class="container">
        <div class="row mt">
            <div class="col-md-12">
                <h1>{{ metric.namePl }}</h1>

                <h3>Google Accessibility</h3>
                <ul>
                    <li>Reguała <a href="https://github.com/GoogleChrome/accessibility-developer-tools/wiki/Audit-Rules#ax_text_03" target="_blank">AX_TEXT_03</a></li>
                </ul>

                <h3>Opis</h3>
                <p>
                    Metryka weryfikuje, czy wszystkie poetykietowane elementy nie mają elementów podrzędnych poza etykietą.
                </p>

                <h3>Wartości metryki</h3>

                <ul>
                    <li>0 jeśli posiadają</li>
                    <li>100 jeśli nie posiadają</li>
                </ul>

                {% include 'metric_meta.twig' %}

            </div>
        </div>
    </section>
{% endblock %}