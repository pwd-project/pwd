{% extends "../layout/base.twig" %}

{% block content %}
    <section class="container">
        <div class="row mt">
            <div class="col-md-12">
                <h1>{{ metric.namePl }}</h1>

                <h3>Google Accessibility</h3>
                <ul>
                    <li>Reguła
                        <a href="{{ metric.guidelineHref }}" target="_blank">{{ metric.guidelineName }}</a>
                    </li>
                </ul>

                <h3>Opis</h3>
                <p>
                    Metryka weryfikuje, czy na zastrzeżonych elementach nie są ustawione role, stany i właściwości ARIA.
                </p>

                <h3>Wartości metryki</h3>

                <ul>
                    <li>0 jeśli są ustawione</li>
                    <li>100 jeśli nie są ustawiones</li>
                </ul>

                {% include 'metric_meta.twig' %}

            </div>
        </div>
    </section>
{% endblock %}