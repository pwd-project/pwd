{% extends "../layout/base.twig" %}

{% block content %}
    <section class="container">
        <div class="row mt">
            <div class="col-md-12">
                <h1>Metryka {{ metric.namePl }}</h1>

                <p>
                Metryka weryfikuje, czy rola role=main pojawia się tylko na kluczowych elementach.
                </p>

                <h3>Wartości metryki</h3>

                <ul>
                    <li>0 jeśli pojawia się także na innych elementach</li>
                    <li>100 jeśli pojawia się tylko na elementach kluczowych</li>
                </ul>

                {% include 'metric_meta.twig' %}

            </div>
        </div>
    </section>
{% endblock %}