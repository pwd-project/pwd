{% extends "../layout/base.twig" %}

{% block content %}
    <section class="container">
        <div class="row mt">
            <div class="col-md-12">
                <h1>{{ metric.namePl }}</h1>

                <h3>WCAG 2.0</h3>
                <ul>
                    <li>Informacje i relacje - wytyczna <a href="http://fdc.org.pl/wcag2/#content-structure-separation" target="_blank">1.3.1</a> </li>
                </ul>

                <h3>Opis</h3>
                <p>
                    Metryka weryfikuje gęstość tagów formatujących.
                </p>

                <h3>Wartości metryki</h3>

                <ul>
                    <li>100 - (ilość tagów formatujących)/(ilość wszystkich tagów w body)</li>
                </ul>

                {% include 'metric_meta.twig' %}

            </div>
        </div>
    </section>
{% endblock %}