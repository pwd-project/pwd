{% extends "layout/base.twig" %}

{% block title %}Serwisy{% endblock %}

{% block content %}
    <section class="container-fluid text-center section page-header">
        <h2>Lista serwisów</h2>
        <h3>Ranking dostępności serwisów użyteczności publicznej w Polsce</h3>
    </section>

	<div class="container-fluid bg-gray section">
		<div class="table-section">
			<form action="/serwisy" method="get" class="websites clearfix row">
				<div class="col-sm-6 col-sm-offset-2">
					<input name="query" value="{{ query }}" type="text" class="form-control" placeholder="Wprowadź nazwę miasta, powiatu lub województwa">
					<p>Dostępne dodatkowe opcje wyszukiwania | lub &amp;: np. "mazowieckie|świętokrzyskie", "lodzkie&amp;powiat"</p>
				</div>
				<div class="col-sm-2">
					<input type="submit" value="Szukaj" class="cta cta-1 cta-search">
				</div>
			</form>

			<div class="table-responsive ">
			<table class="table table-striped table-hover ranking sortable">
                <thead>
                {% if websites %}
                <tr>
					<th class="text-center sortable"><img class="rank-ico" src="/img/rank.png" alt="Pozycja w rankingu"><i class="fa fa-sort"></i></th>
					<th class="sortable">Nazwa<i class="fa fa-sort"></i></th>
					<th class="sortable">Miejscowość<i class="fa fa-sort"></i></th>
					<th class="sortable">Województwo<i class="fa fa-sort"></i></th>
					<th class="sortable">Powiat<i class="fa fa-sort"></i></th>
					<th class="sortable">Pkt.<i class="fa fa-sort"></i></th>
					<th>Url</th>
					<th>Raporty</th>
                </tr>
                {% endif %}
                </thead>
                <tbody>
                {% for item in websites %}
                    <tr>
                        <td class="text-center">{{ currentPlaces.get(loop.index-1) }}.</td>
                        <td>{{ item.administrativeUnit }}</td>
                        <td>{{ item.address.city }}</td>
                        <td>{{ item.address.voivodeship }}</td>
                        <td>{{ item.address.county }}</td>
                        <td>{{ currentScores.get(loop.index-1) }}</td>
						<td>
							<a href="{{ item.url }}" target="_blank" title="{{ item.url }}">
								<i class="fa fa-link"></i>
							</a>
						</td>
						<td><a href="/serwisy/{{ item.id }}" title="Raporty"><i class="fa fa-file-text"></i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% if not websites and query is not null %}
				<div class="col-sm-6 col-sm-offset-2">
					<h3>Brak wyników wyszukiwania</h3>
				</div>
            {% endif %}
			</div>
        </div>
    </section>
{% endblock %}