{% extends "layout/base.twig" %}

{% block title %}Serwisy{% endblock %}

{% block content %}
    <section class="container-fluid">

        <div class="row mt text-center">
            <div class="col-md-12">
                <h2>Lista serwisów</h2>

                <h3>Ranking dostępności serwisów użyteczności publicznej w Polsce</h3>
            </div>
        </div>

        <div class="row mt">
            <div class="col-sm-8 col-sm-offset-2">
                <form class="well form-horizontal" action="/serwisy" method="get">
                    <div class="form-group">
                        <div class="col-sm-10">
                            <input name="query" value="{{ query }}" type="text" class="form-control"
                                   placeholder="Wprowadż nazwę miejscowości, powiatu lub województwa"/>
                        </div>
                        <div class="col-sm-2">
                            <input type="submit" class="btn btn-info" value="Szukaj"/>
                        </div>
                    </div>
                </form>

                <table class="table table-striped table-hover">
                    <thead>
                    {% if websites %}
                    <tr>
                        <th>Nazwa</th>
                        <th>Serwis</th>
                        <th>Miejscowość</th>
                        <th>Województwo</th>
                        <th>Powiat</th>
                        <th>Wynik</th>
                        <th>Miejsce</th>
                        <th></th>
                    </tr>
                    {% endif %}
                    </thead>
                    <tbody>
                    {% for item in websites %}
                        <tr>
                            <td>{{ item.administrativeUnit }}</td>
                            <td><a href="{{ item.url }}" target="_blank">{{ item.url }}</a></td>
                            <td>{{ item.address.city }}</td>
                            <td>{{ item.address.voivodeship }}</td>
                            <td>{{ item.address.county }}</td>
                            <td>{{ currentScores.get(loop.index-1) }}</td>
                            <td>{{ currentPlaces.get(loop.index-1) }}</td>
                            <td><a href="/serwisy/{{ item.id }}"><img src="/img/proces-raport.png" alt=""></a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}