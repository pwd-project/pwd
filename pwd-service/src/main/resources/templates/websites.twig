{% extends "layout/base.twig" %}

{% block title %}Serwisy{% endblock %}

{% block content %}
    <section class="container-fluid">

        <div class="row mt text-center">
            <div class="col-md-12">
                <h2>Lista serwisów</h2>

                <h3>Ranking dostępności serwisów użyteczności publicznej w Polsce</h3>
            </div>
        </div>

        <div class="row mt">
            <div class="col-sm-8 col-sm-offset-2">
                <form class="well" action="/serwisy" method="get">
                    <input name="query" value="{{ query }}" type="text" class="form-control"
                           placeholder="Wprowadż nazwę miejscowości, powiatu lub województwa"/>
                </form>

                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Kod</th>
                        <th>Rodzaj</th>
                        <th>Nazwa</th>
                        <th>Serwis</th>
                        <th>Miejscowość</th>
                        <th>Województwo</th>
                        <th>Powiat</th>
                        <th>Raporty</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in websites %}
                        <tr>
                            <th scope="row">{{ item.areaCode }}</th>
                            <td>{{ item.unitType }}</td>
                            <td>{{ item.administrativeUnit }}</td>
                            <td><a href="{{ item.url }}" target="_blank">{{ item.url }}</a></td>
                            <td>{{ item.address.city }}</td>
                            <td>{{ item.address.voivodeship }}</td>
                            <td>{{ item.address.county }}</td>
                            <td><a href="/serwisy/{{ item.id }}">Zobacz</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}