{% extends "layout/base.twig" %}

{% block title %}Audyty{% endblock %}

{% block content %}
    <section class="container" style="background-color: #fff">
        <div class="row mt">
            <div class="col-md-12">
                <form action="/audyty" method="post">
                    <input type="submit" value="Wystartuj audyt"/>
                </form>
                <h1>Lista wykonanych audytow stron </h1>
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>status</th>
                        <th>ilość stron</th>
                        <th>wykonany</th>
                        <th>czas trwania</th>
                    </tr>
                    </thead>
                    {% for item in audits %}
                        <tr>
                            <td><a href="/audyty/{{ item.id }}"><code>[{{ item.id }}]</code></a></td>
                            <td>{{ item.processStatus }}</td>
                            <td>{{ item.auditedSitesCount }}</td>
                            <td>{{ item.finished | date_format("dd-MM-yyyy H:m:s") }}</td>
                            <td>{{ item.durationAsString }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </section>
{% endblock %}